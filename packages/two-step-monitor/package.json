{
  "private": true,
  "name": "@mantleio/two-step-monitor",
  "version": "0.5.0",
  "description": "[Mantle] Service for detecting faulty L2 output proposals",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "start": "ts-node ./src/service.ts",
    "test": "hardhat test",
    "test:coverage": "nyc hardhat test && nyc merge .nyc_output coverage.json",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist/ ./tsconfig.tsbuildinfo",
    "lint": "yarn lint:fix && yarn lint:check",
    "pre-commit": "lint-staged",
    "lint:fix": "yarn lint:check --fix",
    "lint:check": "eslint . --max-warnings=0"
  },
  "keywords": [
    "mantle",
    "ethereum",
    "fault",
    "detector"
  ],
  "homepage": "https://github.com/mantlenetworkio/mantle/tree/develop/packages/two-step-monitor#readme",
  "license": "MIT",
  "author": "Mantle PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mantlenetworkio/mantle.git"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.3.1",
    "chai-as-promised": "^7.1.1",
    "ethers": "^5.7.0",
    "hardhat": "^2.9.6",
    "ts-node": "^10.9.1"
  }
}
